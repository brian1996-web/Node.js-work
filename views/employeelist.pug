doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
table.table(style='margin-left: 20%; margin-right: 200px; margin-top: 60px')
  thead.table-dark
    tr
      th(scope='col') firstname
      th(scope='col') Lastname
      th(scope='col') Age
      th(scope='col') Email
      th(scope='col') Telephone
  tbody
    
    if employees.length
        each employee in employees 
          tr
            td#{employee.firstname}
            td#{employee.lastname}
            td#{employee.age}
            td#{employee.email}
            td#{employee.telephone}
  else 
      p there are no employees in the database
  

